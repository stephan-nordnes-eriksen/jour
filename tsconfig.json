{
	"compilerOptions": {
		"module": "commonjs",
		"strict": true,
		"useUnknownInCatchVariables": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2019",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"lib": [
			"ES2019"
		],
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
